<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.BaimiDetailedAndTabActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/baimi_detailed_atab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center_horizontal"
            android:text="@string/detailed"
            android:textColor="@color/g333333"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_detailed"
            android:layout_width="@dimen/dp_335"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/gFFFFFF">

            <RelativeLayout
                android:layout_width="@dimen/dp_335"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15">

                <ImageView
                    android:id="@+id/img_baimi_detailed"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_160"
                    android:background="@mipmap/zhanweitu_xianlu_jingdian" />

                <TextView
                    android:id="@+id/tv_baimi_detailed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_baimi_detailed"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@id/img_baimi_detailed"
                    android:textColor="@color/g333333"
                    android:textSize="@dimen/sp_22" />

                <ImageView
                    android:id="@+id/img_baimi_follow"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_161"
                    android:layout_toRightOf="@id/img_baimi_detailed"
                    android:background="@mipmap/follow_unselected" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_baimi_follow"
                    android:layout_marginLeft="@dimen/dp_158"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toRightOf="@id/img_baimi_detailed"
                    android:text="@string/follow" />

                <TextView
                    android:id="@+id/tv_follows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_baimi_detailed_name"
                    android:layout_alignLeft="@id/tv_baimi_detailed_name"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/g999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_98"
                    android:layout_toRightOf="@id/img_baimi_detailed"
                    android:background="@mipmap/location" />

                <TextView
                    android:id="@+id/tv_baimi_detailed_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_location"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_toRightOf="@id/img_location"
                    android:textColor="@color/g999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_detailed_message"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_below="@id/img_location"
                    android:layout_alignLeft="@id/img_location"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@mipmap/message" />

                <TextView
                    android:id="@+id/tv_baimi_detailed_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_detailed_message"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_toRightOf="@id/img_detailed_message"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_baimi_detailed_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_baimi_detailed"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/g666666"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_baimi_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            app:tabMode="fixed" />

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_32"></FrameLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>