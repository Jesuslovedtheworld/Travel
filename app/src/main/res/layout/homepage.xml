<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/dp_12">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_37"
                android:background="@mipmap/zhanweitu_touxiang" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_42"
                android:layout_toRightOf="@id/img_main"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/brief"
                android:layout_width="@dimen/dp_194"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toRightOf="@id/img_main"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_239"
                android:layout_marginTop="@dimen/dp_94"
                android:background="@mipmap/icon_me_bianji" />

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_259"
                android:layout_marginTop="@dimen/dp_91"
                android:text="@string/edit"
                android:textColor="@color/gFA6A13"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/img_big"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_122"
                android:layout_below="@id/img_main"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_46"
                android:background="@drawable/homepage" />

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_161"
                android:text="我的钱包"
                android:textColor="@color/gFFFFFF"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_70"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_174"
                android:text="99"
                android:textColor="@color/gFFFFFF"
                android:textSize="@dimen/sp_58" />

            <TextView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_220"
                android:layout_toRightOf="@id/tv_num"
                android:text="@string/moneyunit" />

            <TextView
                android:id="@+id/prize"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_215"
                android:layout_marginTop="@dimen/dp_239"
                android:text="赢取奖励" />

            <RelativeLayout
                android:id="@+id/rl_one"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_286"
                android:background="@color/gFFFFFF"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_17">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@mipmap/icon_me_kaquan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="@string/My_card_roll"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:text=">" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_53"
                android:layout_below="@id/rl_one"
                android:background="@color/gFFFFFF"
                android:paddingTop="@dimen/dp_17">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@mipmap/icon_me_yigou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="@string/Purchased_itinerary"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:text=">" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_53"
                android:layout_below="@id/rl_two"
                android:background="@color/gFFFFFF"
                android:paddingTop="@dimen/dp_17">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@mipmap/icon_me_shoucang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="@string/myCollection"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:text=">" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_53"
                android:layout_below="@id/rl_three"
                android:background="@color/gFFFFFF"
                android:paddingTop="@dimen/dp_17">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@mipmap/icon_me_guanzhu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:text="@string/myfllow"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_270"
                    android:text=">" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_308"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_629"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@mipmap/icon_me_kefu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_14"
                    android:text="@string/Contact_customer_service"
                    android:textColor="@color/g333333"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@mipmap/icon_me_fankui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_14"
                    android:text="@string/suggestion"
                    android:textColor="@color/g333333"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_upgrade"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_34"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@mipmap/icon_me_banben" />

                <TextView
                    android:id="@+id/tv_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_14"
                    android:text="@string/edition"
                    android:textColor="@color/g333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
