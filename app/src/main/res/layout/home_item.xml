<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:gravity="center"
    android:paddingTop="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20"
    >
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_140">

    <RelativeLayout
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_130">
        <ImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:id="@+id/img_people"
            />
        <TextView
            android:id="@+id/home_name"
            android:textColor="@color/g333333"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_toRightOf="@id/img_people"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_17"
            android:textColor="@color/g999999"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/img_people"
            android:layout_below="@id/home_name"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_17"
            android:id="@+id/tv_care"
            />
        <ImageView
            android:background="@mipmap/location"
            android:id="@+id/img_local"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_toRightOf="@id/img_people"
            android:layout_below="@id/tv_care"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/tv_local"
            android:textColor="@color/g999999"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_below="@id/tv_care"
            android:layout_toRightOf="@id/img_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:background="@mipmap/comment"
            android:id="@+id/img_author"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/img_local"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_7"
            android:layout_toRightOf="@id/img_people"
            />
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/tv_author"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_below="@id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_author"
            />

        <ImageView
            android:id="@+id/img_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="20dp"
            android:background="@mipmap/follow_unselected" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
