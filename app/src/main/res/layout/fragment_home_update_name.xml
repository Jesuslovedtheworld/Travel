<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeUpdateNameActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:id="@+id/toolbar"
        >
        <TextView
            android:id="@+id/specific"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/g333333"
            android:textSize="@dimen/sp_16"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specific"
            />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:gravity="top|left"
        android:text="fdsaf"
        android:id="@+id/et"
        android:layout_marginTop="@dimen/dp_84"
        android:background="@drawable/home_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:maxLength="27"
        />
        <TextView
            android:layout_marginLeft="@dimen/dp_290"
            android:layout_marginTop="@dimen/dp_177"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/27"
            />
</RelativeLayout>